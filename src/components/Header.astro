<style>
	header {
		position: sticky;
		top: 0;
		z-index: 1000;
		margin: 0;
		padding: 0 1em;
		background: #111111aa no-repeat;
    backdrop-filter: blur(10px);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
    border-bottom: 1px solid #373737;
	}
	
	header.sticky {
		position: sticky;
		top: 0;
		z-index: 1000;
	}

	nav {
		display: flex;
		align-items: center;
    justify-content: space-between;
	}

	nav a {
		padding: 0.5em 0.25em;
		color: #999999;
    margin-top: 0.3em;
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}

	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}

	.social-links,
	.social-links a {
		display: flex;
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
